<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="260dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@color/colorAccent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/distance_default"
        android:text="@string/ServiceSelector_Title"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/Service_RadioButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RealService"
            style="@style/ButtonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:buttonTint="@android:color/white"
            android:text="@string/ServiceSelector_Real"/>

        <RadioButton
            android:id="@+id/MockService"
            style="@style/ButtonTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="@string/ServiceSelector_Mock"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:paddingBottom="@dimen/distance_default"
        android:paddingLeft="@dimen/distance_default"
        android:paddingRight="@dimen/distance_default"
        android:paddingTop="8dp"
        android:text="@string/Service_Descriptions"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</LinearLayout>