<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gk.daas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.gk.daas.core.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.gk.daas.screen.home.HomeActivity"
            android:label="@string/HomeActivity_label">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gk.daas.screen.second.SecondActivity"
            android:label="@string/SecondActivity_label" />

        <service
            android:name="com.gk.daas.data.network.NetworkService"
            android:exported="false" />

        <receiver
            android:name="com.gk.daas.data.network.SyncSchedulerBroadcastReceiver"
            android:exported="false" />
    </application>


</manifest>
